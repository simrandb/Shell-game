<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    >

    <ImageView
        android:id="@+id/table"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_x="50dp"
        android:layout_y="289dp"
        app:srcCompat="@drawable/table" />

    <ImageView
        android:id="@+id/ball"
        android:layout_width="63dp"
        android:layout_height="47dp"
        android:layout_x="170dp"
        android:layout_y="450dp"
        app:srcCompat="@drawable/ball" />

    <TextView
        android:id="@+id/instructionText"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_x="60dp"
        android:layout_y="560dp"
        android:text="Keep track of the ball"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFD700"
        android:textSize="30sp" />



    <ImageView
        android:id="@+id/glass2"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_x="160dp"
        android:layout_y="-110dp"
        app:srcCompat="@drawable/glass" />

    <ImageView
        android:id="@+id/glass1"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_x="-85dp"
        android:layout_y="8dp"
        app:srcCompat="@drawable/glass" />

    <ImageView
        android:id="@+id/glass3"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_x="405dp"
        android:layout_y="8dp"
        app:srcCompat="@drawable/glass" />




    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/curtains"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/curtains"/>



</AbsoluteLayout>


